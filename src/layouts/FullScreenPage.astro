---
interface Props {
  backgroundColor?: string,
  pagePadding?: string,
  enableScroll?: boolean,
  pageId?: string,
}
const { pagePadding = "20px", backgroundColor = "transparent", enableScroll = false, pageId } = Astro.props;
const scrollCSS = enableScroll ? `overflow-y: scroll;` : "";
---

<section class="fullscreen" style={`--bg-color: ${backgroundColor};`}>
  <slot name="background"/>
  <div 
    class="container" 
    style={`padding: ${pagePadding}; ${scrollCSS}`}
    id={pageId}
  >
    <slot/>
  </div>
</section>

<style lang="scss">
  .fullscreen {
    width: 100vw;
    min-height: 100vh;
    background-color: var(--default-bg-color);
    position: relative;
  }
  .container {
    width: 100vw;
    height: 100vh;
    position: relative;
    overflow: visible;
    transform: translate3d(0,0,0);
  }
</style>