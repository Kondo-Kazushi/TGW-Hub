---
import FullScreenPage from '../../layouts/FullScreenPage.astro';
import PageDescription from '../PageDescription.astro';
import StyledBackground from '../StyledBackground.astro';

import ManagerSVG from '@img/undraw-manager.svg';
---

<FullScreenPage pagePadding="0px">
  <StyledBackground />
  <div class="flex-container">
    <div class="page-description">
      <PageDescription 
        title="managers"
        description={[
          "hello world",
        ]}
      />
      <!-- TODO: add button link to managers page -->
    </div>
    <div class="icon-wrapper">
      <img src={ManagerSVG.src} alt="manager icon">
    </div>
  </div>
</FullScreenPage>

<style lang="scss">
  @import "@sass-lib/util-function";

  .flex-container {
    width: 100%;
    height: 100%;
    @include flex-container-center();
    flex-direction: row-reverse;
    padding: 20px;

    .page-description {
      flex: 1 1 60%;
      max-width: 700px;
      padding-left: 10%;
    }

    .icon-wrapper  {
      flex: 1 1 40%;
      max-width: 300px;
      padding: 20px;

      img {
        display: block;
        width: 100%;
      }
    }
  }
</style>