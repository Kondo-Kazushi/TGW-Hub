---
import Layout from '../layouts/Layout.astro';
import FullScreenPage from '../layouts/FullScreenPage.astro';
import Button from '../components/Button.astro';
---

<Layout title="Test">
  <FullScreenPage backgroundColor='#555555'>
    <Button buttonText="click me" size='m' theme="dark"/>
    <Button buttonText="click me" uppercase size='s'/>
    <Button 
      buttonText="click me" 
      uppercase size='l' 
      theme={{ type: "primary", color: "#0098f0" }}
    />
    <Button 
      buttonText="click me" 
      uppercase size='s' 
      theme={{ type: "outline", color: "#22bf20" }}
    />
    <Button 
      buttonText="click me" 
      uppercase size='l' 
      borderRadius={20}
      theme="light"
    />
    <Button buttonText='Hello' classList={["hi"]}/>
    <Button 
    buttonText='mikiya'
    />
  </FullScreenPage>
</Layout>

<style lang="scss">
  .dark {
    background-color: #555555 !important;
  }
  .hi {
    margin: 100px;
  }
</style>